{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "JSON schema for yaml-validator rules",
  "definitions": {
    "schemaArray": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#"
      }
    },
    "simpleTag": {
      "enum": [
        "!gt ",
        "!lt ",
        "!nn",
        "!not.",
        "!not.gt ",
        "!not.lt ",
        "!not.nn"
      ]
    },
    "validator": {
      "anyOf": [
        {
          "$ref": "#/definitions/simpleTag"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#"
          }
        },
        {
          "type": "object"
        },
        {
          "$ref": "#"
        }
      ]
    }
  },
  "patternProperties": {
    "^[_a-zA-Z][a-zA-Z0-9_-]*$": {
      "$ref": "#/definitions/validator"
    }
  }
}
